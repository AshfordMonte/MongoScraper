<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="/">Mongo Scraper</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
    aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/saved">Saved Articles</a>
      </li>
      <li class="nav-item">
        <button type="button" class="btn btn-primary navbutton">Scrape
          Articles</button>
      </li>
      <li>
        <button type="button" class="btn btn-danger navbutton">Clear Articles</button>
      </li>
    </ul>
  </div>
</nav>

<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-3 center">Mongo Scraper</h1>
    <p class="lead center"><span style="color: darkred;">PC Gamer</span> edition</p>
  </div>
</div>

<div class="container-fluid">
  {{#if Article}}
  {{#each Article}}
  <div class="card">
    <div class="card-header">
      <h3>
        <a class="article-link" target="_blank" rel="noopener noreferrer"
        href="{{this.link}}">
        {{this.title}}
        </a>
      </h3>
    </div>
    <div class="card-body">
      {{this.synopsis}}
    </div>
  </div>
  {{/each}}
  {{else}}
  <div class="alert alert-primary text-center">
    <h4>There are no articles currently, click "Scrape Articles" to find some!</h4>
  </div>
  {{/if}}
</div>